<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
	<fieldset>
		<legend>Inscription</legend>
	   <div class="form-group">
			<div class="col-sm-2">
				{{ form_label(form.username, 'form.username'|trans, {'attr': {'class': 'control-label'}}) }}
			</div>
			{{ form_errors(form.username) }}
			<div class="col-sm-5 col-xs-6">
				{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-2">
				{{ form_label(form.email, 'form.email'|trans, {'attr': {'class': 'control-label'}}) }}
			</div>
			{{ form_errors(form.email) }}
			<div class="col-sm-5 col-xs-6">
				{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-2">
				{{ form_label(form.plainPassword.first, 'form.password'|trans, {'attr': {'class': 'control-label'}}) }}
			</div>
			{{ form_errors(form.plainPassword.first) }}
			<div class="col-sm-5 col-xs-6">
				{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-2">
				{{ form_label(form.plainPassword.second, 'form.password_confirmation'|trans, {'attr': {'class': 'control-label'}}) }}
			</div>
			{{ form_errors(form.plainPassword.second) }}
			<div class="col-sm-5 col-xs-6">
				{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		{{ form_rest(form)}}
	    <div>
	</fieldset>
        <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
