{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
<div class="col-sm-6">
    
<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	<fieldset>
        <legend>Login</legend>
            <div class="form-group">
            	<div class="col-sm-4">
            		<label for="username" class="control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            	</div>

            	<div class="col-sm-8 col-xs-6">
            		<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
            	</div>
            </div>

        	<div class="form-group">
            	<div class="col-sm-4">
            		<label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
            	</div>
            	<div class="col-sm-8 col-xs-6">
            		<input type="password" id="password" name="_password" required="required" class="form-control" />
            	</div>
            </div>


            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
            <br>
            <br>
        </fieldset>

    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
</form>
</div>
<div class="col-sm-6 height-text">
    <p class="text-left">Have you forgot your password ? click on this link to reset your account.</p>
    <a href="{{ path('fos_user_resetting_request')}}">Reset my password</a>
</div>
{% endblock fos_user_content %}
