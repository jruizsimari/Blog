{% extends 'SdzBlogBundle::layout.html.twig' %}
{% block title %}Supprimer un article - {{ parent() }}{% endblock %}

{% block sdzblog_body %}
	<h2>Supprimer un article</h2>
	<p>Etes-vous certain de vouloir supprimer l'article "{{ article.titre }}"</p>

	{# On met le slug de l'article dans la route de l'action du formulaire #}
	<form action="{{ path('sdzblog_supprimer', {'slug': article.slug}) }}" method="post">
		<ul class="pager">
			<li class="previous">
				<a href="{{ path('sdzblog_voir', {'slug': article.slug}) }}" class="btn"><i class="glyphicon glyphicon-chevron-left"></i>{{ 'previous'|trans }}</a>
	    		<input type="submit" value="{{ 'article.delete'|trans }}" class="btn btn-danger"/>
			</li>
		</ul>
	    {{ form_rest(form) }}
	</form>
{% endblock %}