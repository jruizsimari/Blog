{% form_theme form 'SdzBlogBundle:Form:fields.html.twig' %}
<h3>Formulaire d'article</h3>

<div class="well">
	<form class="form-horizontal" role="form" method="post" {{ form_enctype(form) }}>
		{{ form_errors(form) }}
		<fieldset>
			<legend>Article</legend>
			{% if form.date is defined %}
			<div class="form-group">
				<div class="col-sm-2
				">{{ form_label(form.date, "Date de création", {'attr': {'class': 'control-label'}}) }}</div>
				{{ form_errors(form.date) }}
				<div class="col-sm-2 col-xs-4">{{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			{% endif %}
			<div class="form-group">
				<div class="col-sm-2
				">{{ form_label(form.titre, "Titre de l'article", {'attr': {'class': 'control-label'}}) }}</div>
				{{ form_errors(form.titre) }}
				<div class="col-sm-5">{{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2
				">{{ form_label(form.contenu, "Contenu de l'article", {'attr': {'class': 'control-label'}}) }}</div>
				{{ form_errors(form.contenu) }}
				<div class="col-sm-5">{{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2
				">{{ form_label(form.auteur, "Auteur de l'article", {'attr': {'class': 'control-label'}}) }}</div>
				{{ form_errors(form.auteur) }}
				<div class="col-sm-5">{{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			{% if form.publication is defined %}
			<div class="form-group">
			    <div class="col-sm-2">{{ form_label(form.publication, "Publication") }}</div>
			    {{ form_errors(form.publication) }}
			    <div class="col-sm-5">{{ form_widget(form.publication) }}</div>
			</div>
			{% endif %}
		</fieldset>
		<fieldset>
			<legend>Image</legend>
			<div class="form-group">
				<div class="col-sm-2 col-xs-5
				">{{ form_label(form.image.file, "Charger l'image", {'attr': {'class': 'control-label'}}) }}</div>
				{{ form_errors(form.image.file) }}
				<div class="col-sm-5 col-xs-6">{{ form_widget(form.image.file, {'attr': {'title': 'Importer l\'image'}}) }}
				</div>
			</div>
			
		</fieldset>
		<fieldset>
			<legend>Catégories</legend>	
				<div class="form-group">
					<div class="col-sm-2 col-xs-5 label-select">

					</div>
				
					<div class="col-sm-5 col-xs-7 select">
						{{ form_row(form.categories) }}
					</div>
				</div>
					{# <div class="col-sm-2">
						{{ form_label(form.categories.vars.prototype.nom, "Nom de la catégorie", {'attr': {'class':'control-label'}}) }}
						{{ form_errors(form.categories.vars.prototype.nom) }}
					</div>

					<div class="col-sm-5">
						{{ form_widget(form.categories.vars.prototype.nom, {'attr': {'class': 'form-control'}}) }}
					</div>                        
					<div class="col-sm-1 perso">                                   
						<a href="#"><span class="glyphicon glyphicon-plus-sign"></span></a>                                
						<a href="#"><span class="glyphicon glyphicon-minus-sign"></span></a>
					</div> #}
		</fieldset>
		{{ form_widget(form._token) }}
		<input type="submit" class="btn btn-primary">
	</form>
</div>
